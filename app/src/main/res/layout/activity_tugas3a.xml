<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".Tugas3a">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1"
        >

        <LinearLayout
            android:weightSum="2"
            android:layout_marginBottom="5dip">

            <ImageView
                android:id="@+id/imageOriColor"
                android:scaleType="fitCenter"
                android:layout_width="0dp"
                android:layout_height="270dip"
                android:layout_weight="1"
                android:layout_marginRight="5dip"
                android:src="@drawable/noperson"
                />
            <ImageView
                android:id="@+id/imageTransformColor"
                android:scaleType="fitCenter"
                android:layout_width="0dp"
                android:layout_height="270dip"
                android:layout_weight="1"
                android:layout_marginRight="5dip"
                android:src="@drawable/noperson"
                />
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_marginBottom="5dip">

            <ImageView
                android:id="@+id/imageOriGrayscale"
                android:scaleType="fitCenter"
                android:layout_width="0dp"
                android:layout_height="270dip"
                android:layout_weight="1"
                android:layout_marginRight="5dip"
                android:src="@drawable/noperson"
                />
            <ImageView
                android:id="@+id/imageTransformGrayscale"
                android:scaleType="fitCenter"
                android:layout_width="0dp"
                android:layout_height="270dip"
                android:layout_weight="1"
                android:layout_marginRight="5dip"
                android:src="@drawable/noperson"
                />
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_marginBottom="10dip">
            <Button
                android:id="@+id/takePictureBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Add Picture"
                android:onClick="addPicture"/>
            <Button
                android:id="@+id/transformBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Transform"
                android:onClick="transform"/>
        </LinearLayout>

        <LinearLayout
            android:weightSum="1">
            <SeekBar
                android:id="@+id/seekBarW"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="10"
                android:min="3"
                android:progress="10"/>

        </LinearLayout>

        <LinearLayout
            android:weightSum="1"
            android:layout_marginBottom="10dip">
            <TextView
                android:id="@+id/seekBarText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Current value is 1"
                android:textSize="14dip"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_marginBottom="5dip">

            <com.jjoe64.graphview.GraphView
                android:layout_width="0dp"
                android:layout_height="120dip"
                android:layout_weight="1"
                android:id="@+id/graphRed"
                />

            <com.jjoe64.graphview.GraphView
                android:layout_width="0dp"
                android:layout_height="120dip"
                android:layout_weight="1"
                android:id="@+id/graphGreen"
                />
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_marginBottom="5dip">
            <com.jjoe64.graphview.GraphView
                android:layout_width="0dp"
                android:layout_height="120dip"
                android:layout_weight="1"
                android:id="@+id/graphBlue"
                />

            <com.jjoe64.graphview.GraphView
                android:layout_width="0dp"
                android:layout_height="120dip"
                android:layout_weight="1"
                android:id="@+id/graphGrayscale"
                />
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_marginBottom="5dip">

            <com.jjoe64.graphview.GraphView
                android:layout_width="0dp"
                android:layout_height="120dip"
                android:layout_weight="1"
                android:id="@+id/kumulatifRed"
                />

            <com.jjoe64.graphview.GraphView
                android:layout_width="0dp"
                android:layout_height="120dip"
                android:layout_weight="1"
                android:id="@+id/kumulatifGreen"
                />
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_marginBottom="5dip">
            <com.jjoe64.graphview.GraphView
                android:layout_width="0dp"
                android:layout_height="120dip"
                android:layout_weight="1"
                android:id="@+id/kumulatifBlue"
                />

            <com.jjoe64.graphview.GraphView
                android:layout_width="0dp"
                android:layout_height="120dip"
                android:layout_weight="1"
                android:id="@+id/kumulatifGrayscale"
                />
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_marginBottom="5dip">

            <com.jjoe64.graphview.GraphView
                android:layout_width="0dp"
                android:layout_height="120dip"
                android:layout_weight="1"
                android:id="@+id/ekualRed"
                />

            <com.jjoe64.graphview.GraphView
                android:layout_width="0dp"
                android:layout_height="120dip"
                android:layout_weight="1"
                android:id="@+id/ekualGreen"
                />
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_marginBottom="5dip">
            <com.jjoe64.graphview.GraphView
                android:layout_width="0dp"
                android:layout_height="120dip"
                android:layout_weight="1"
                android:id="@+id/ekualBlue"
                />

            <com.jjoe64.graphview.GraphView
                android:layout_width="0dp"
                android:layout_height="120dip"
                android:layout_weight="1"
                android:id="@+id/ekualGrayscale"
                />
        </LinearLayout>

    </TableLayout>
</ScrollView>