<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".Tugas6">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1"
        >

        <LinearLayout
            android:weightSum="2">

            <ImageView
                android:id="@+id/imageOriColor"
                android:scaleType="fitCenter"
                android:layout_width="0dp"
                android:layout_height="270dip"
                android:layout_weight="2"
                android:layout_marginBottom="10dip"
                android:src="@drawable/noperson"
                />
            <!--<ImageView-->
                <!--android:id="@+id/imageZhangSuen"-->
                <!--android:scaleType="fitCenter"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="270dip"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_marginBottom="10dip"-->
                <!--android:src="@drawable/noperson"-->
                <!--/>-->
        </LinearLayout>

        <LinearLayout
            android:weightSum="2">
            <Button
                android:id="@+id/takePictureBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Add Picture"
                android:onClick="addPicture"/>

            <Button
                android:id="@+id/zhangSuenBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Zhang Suen"
                android:onClick="zhangSuenThinning"/>
        </LinearLayout>

        <LinearLayout
            android:weightSum="1">
            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:id="@+id/resultText"/>
        </LinearLayout>
        <LinearLayout
            android:weightSum="1">
            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/featureText"/>
        </LinearLayout>
    </TableLayout>
</ScrollView>